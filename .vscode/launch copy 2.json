{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: Full Stack",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "program": "${workspaceFolder}/app-main/node_modules/next/dist/bin/next",
      "args": ["dev"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}/app-main",
      "outFiles": ["${workspaceFolder}/app-main/.next/**/*.js"],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/app-main/.next/**/*.js",
        "!**/node_modules/**"
      ],
      "envFile": "${workspaceFolder}/app-main/.env.local",
      "env": {
        "NODE_ENV": "development"
      },
      "preLaunchTask": "Start ngrok"
    },
    {
      "name": "Browser: chromium",
      "runtimeExecutable": "C:\\Program Files\\chromium\\chrome-win\\chrome.exe",
      "request": "launch",
      "type": "msedge",
      "url": "https://vicre-nextjs-app.ngrok.dev/",
      "webRoot": "${workspaceFolder}/app-main",
      "disableNetworkCache": true
    }
  ],
  "compounds": [
    {
      "name": "Start All",
      "configurations": [
        "Next.js: Full Stack",
        "Browser: chromium"
      ]
    }
  ]
}
